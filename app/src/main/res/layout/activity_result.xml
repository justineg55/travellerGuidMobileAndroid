<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.ResultActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgActivity"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/travellerbackgroung"
                android:padding="4dp"/>

            <!-- Activity label - activity -->
            <TextView
                android:id="@+id/txt_activity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/imgActivity"
                android:text="ActivitÃ© :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_activity_label"
                android:fontFamily="@font/baloo"
                android:text="Activity"
                android:textSize="18sp" />

            <!-- budget label - budget -->
            <TextView
                android:id="@+id/txt_budget_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_activity_label"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/imgActivity"
                android:text="Budget :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_activity_label"
                android:layout_centerHorizontal="false"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_budget_label"
                android:fontFamily="@font/baloo"
                android:text="Budget"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>